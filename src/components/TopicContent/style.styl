.topic-content-wrapper
	width 960px
	height: 100%
	overflow auto
	margin: 0 auto
	.block-item
		margin-bottom 20px
		background-color: #fff
		border-radius 5px
		padding 10px
		&:first-child
			margin-top 20px
		&:last-child
			margin-bottom 0
		.top-bar
			border-bottom 1px solid #eeeeee
			.title
				font-size 22px
				margin-bottom 8px
			.topic-info-list
				font-size 12px
				color #838383
				margin-bottom 10px
				.list-item
					float left
					margin-right 10px
					&:before
						content '.'
				&:after
					display block
					content ''
					visibility hidden
					height 0
					clear both
		.reply-list
			font-size 12px
			.list-item
				display block
				height 40px
				padding 5px 10px 5px 0
				box-sizing border-box
				background-color #fff
				border-bottom 1px solid #e5e5e5
				.left-content
					float left
					width 30px
					height 30px
					.tiny-avatar
						width 30px
						height 30px
				.right-content
					margin-left 45px
					a
						display block
						color #00a1d6
						text-decoration none
					span
						float right