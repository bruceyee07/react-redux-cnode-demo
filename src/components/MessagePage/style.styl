.message-wrapper
	height 100%
	background-color #fff
	.message-header-wrapper
		position relative
		background-color rgba(51,51,51,.78)
		width 100%
		height 60px
		line-height 60px
		text-align center
		font-size 16px
		color #fdf4da
	.message-content-wrapper
		height calc(100% - 100px)
		.message-tab-wrapper
			.message-tabs
				height 40px
				line-height 40px
				background-color #e0e0e0
				.message-tab
					display block
					height 40px
					box-sizing border-box
					float left
					width 50%
					text-align center
					cursor pointer
					.unread-count-tag
						display inline-block
						vertical-align middle
						width 20px
						height 20px
						line-height 20px
						border-radius 50%
						background-color red
						color #fff
						margin-left 20px
						font-size 12px
						font-weight bold
					&.active
						border-bottom 4px solid #5fee93
				&:after
					display block
					height 0
					visibility hidden
					clear both
					content ''
		.message-content
			height calc(100% - 40px)
			overflow auto
			.message-list
				.list-item
					position relative
					display block
					min-height 40px
					padding 5px 10px 5px 0
					box-sizing border-box
					background-color #fff
					border-bottom 1px solid #e5e5e5