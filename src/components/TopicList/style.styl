.topic-list
	li
		display block
		box-sizing border-box
		height 80px
		background-color #fff
		border-bottom 1px solid #e5e5e5
		padding 10px 20px
		.left-wrap
			float left
			width 60px
			height 60px
			.avatar
				width 50px
				height 50px
		.right-wrap
			margin-left 60px
			.title
				color #333
				text-decoration none
				font-size 16px
				font-weight bold