.topic-list
	li
		display block
		box-sizing border-box
		height 80px
		background-color #fff
		border-bottom 1px solid #e5e5e5
		padding 10px 20px
		.left-wrap
			float left
			width 60px
			height 60px
			.avatar
				width 50px
				height 50px
		.right-wrap
			position relative
			margin-left 60px
			padding-left 10px
			height 60px
			.top-info
				.iconfont
					display inline-block
					width 16px
					height 16px
					color #fe5349
					font-size 12px
					text-align center
					border 2px solid #fe5349
					&:first-child
						margin-right 5px
				.iconfont.good-icon
					border-radius 50%
				.iconfont.top-icon
					border-radius 5px
				.title
					color #333
					text-decoration none
					font-size 16px
					font-weight bold
					margin-left 10px
			.bottom-info
				position absolute
				bottom 0
				right 0
				left 10px
				font-size 14px
				.topic-info
					color: #94a6d9
					font-weight bold
					margin-left 20px
				.date-info
					float right