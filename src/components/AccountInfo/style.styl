.account-info-wrapper
	height 100%
	background-color #fff
	.account-header
		position relative
		background-color rgba(51,51,51,.78)
		width 100%
		height 60px
		line-height 60px
		text-align center
		font-size 16px
		color #fdf4da
		.sign-out-btn
			position absolute
			right 15px
			top 14px
			cursor pointer
			color #fff
	.account-info
		box-sizing border-box
		background-color #57d89d
		height 200px
		padding 30px 0 10px
		text-align center
		color #fdf4da
		.account-avatar
			width 80px
			height 80px
			border-radius 50%
		.account-name
			font-size 20px
			margin 10px auto
		.basic-info
			text-align center
			li
				display inline-block
				&:first-child
					margin-right 10px
			&:after
				display block
				height 0
				visibility hidden
				clear both
				content ''
	.account-topic-wrapper
		height calc(100% - 300px)
		.account-topic-header
			.account-topic-tabs
				height 40px
				line-height 40px
				background-color #e0e0e0
				.account-topic-tab
					display block
					height 40px
					box-sizing border-box
					float left
					width 50%
					text-align center
					cursor pointer
					&.active
						border-bottom 4px solid #5fee93
				&:after
					display block
					height 0
					visibility hidden
					clear both
					content ''
		.account-topic-content
			height calc(100% - 40px)
			overflow auto
			position relative
			.account-topic-list
				.list-item
					position relative
					display block
					height 40px
					padding 5px 10px
					box-sizing border-box
					background-color #fff
					border-bottom 1px solid #e5e5e5
					font-size 12px
					.last-reply-at
						position absolute
						right 10px
						bottom 5px
			.empty
				position absolute
				left 50%
				top 50%
				transform translate(-50%, -50%)
				font-size 14px
				font-weight bold